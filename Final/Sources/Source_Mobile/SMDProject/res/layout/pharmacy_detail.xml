<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/pharmacyImage"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/text_blank"
                android:padding="0.5dp"
                android:src="@drawable/pharmacy_256" />

            <TextView
                android:id="@+id/addressDetail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pharmacyImage"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/address"
                android:layout_marginLeft="10dp"
                android:textColor="@color/medium_red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/addressDetail"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/pharmacyImage"
                android:text="Địa chỉ:"
                android:textColor="@color/medium_red"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pharmacyName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/dark_red"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pharmacyImage"
                android:contentDescription="@string/text_blank"
                android:src="@drawable/line_gray" />

            <TextView
                android:id="@+id/location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:text="Vị trí:"
                android:textSize="16sp"
                android:textStyle="bold" />
            
            <Button
                android:id="@+id/locationDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:layout_below="@id/location"
                android:padding="5dp"
                android:text="@string/pharmacy_map"
                android:textSize="16sp"
                android:textColor="@color/dark_blue" />
            
            <ImageView
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationDetail"
                android:contentDescription="@string/text_blank"
                android:src="@drawable/line_gray" />
            

            <TextView
                android:id="@+id/homePhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:text="Số điện thoại:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/homePhoneDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/homePhone"
                android:layout_marginLeft="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/homePhoneDetail"
                android:contentDescription="@string/text_blank"
                android:src="@drawable/line_gray" />

            <TextView
                android:id="@+id/businessLicense"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:text="Giấy phép kinh doanh:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/businessLicenseDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/businessLicense"
                android:layout_marginLeft="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/line3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/businessLicenseDetail"
                android:contentDescription="@string/text_blank"
                android:src="@drawable/line_gray" />

            <TextView
                android:id="@+id/gppNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line3"
                android:text="Số GPP:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gppNoDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gppNo"
                android:layout_marginLeft="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/line4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gppNoDetail"
                android:contentDescription="@string/text_blank"
                android:src="@drawable/line_gray" />

            <TextView
                android:id="@+id/ofCompany"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line4"
                android:text="Trực thuộc công ty:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ofCompanyDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ofCompany"
                android:layout_marginLeft="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/line5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ofCompanyDetail"
                android:contentDescription="@string/text_blank"
                android:src="@drawable/line_gray" />

            <TextView
                android:id="@+id/notes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line5"
                android:text="Chứng nhận/Bằng khen:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notesDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notes"
                android:layout_marginLeft="10dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/line6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notesDetail"
                android:contentDescription="@string/text_blank"
                android:src="@drawable/line_gray" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4" >

        <ImageView
            android:id="@+id/search_medicine"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange_btn"
            android:contentDescription="@string/text_blank"
            android:onClick="pdToSearchMedicine"
            android:scaleType="center"
            android:src="@drawable/search_medicine_default" />

        <ImageView
            android:id="@+id/find_location"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange_btn"
            android:contentDescription="@string/text_blank"
            android:onClick="smToFindLocation"
            android:scaleType="center"
            android:src="@drawable/find_pharmacy" />

        <ImageView
            android:id="@+id/historical_using"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange_btn"
            android:contentDescription="@string/text_blank"
            android:onClick="smToDiaryUsing"
            android:scaleType="center"
            android:src="@drawable/medicine_diary_default" />

        <ImageView
            android:id="@+id/introduction"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange_btn"
            android:contentDescription="@string/text_blank"
            android:onClick="smToAboutUs"
            android:scaleType="center"
            android:src="@drawable/about_us_default" />
    </LinearLayout>

</LinearLayout>